<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@color/bl">

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textColor="@color/button_back"
        android:textSize="@android:dimen/app_icon_size"/>

    <Button
        android:id="@+id/b_del"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="C"
        android:textSize="30sp"
        android:layout_below="@id/tt"
        android:background="@color/button_back"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b_sqrt"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="sqrt"
        android:textSize="18sp"
        android:layout_toEndOf="@id/b_del"
        android:layout_below="@id/tt"
        android:background="@color/button_back"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/b_div"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="/"
        android:textSize="30dp"
        android:layout_toEndOf="@id/b_sqrt"
        android:layout_below="@id/tt"
        android:background="@color/button_back"
        android:textColor="@android:color/white"
        android:onClick="onClickSign"/>

    <Button
        android:id="@+id/b_mul"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="x"
        android:textSize="30sp"
        android:layout_toEndOf="@id/b_div"
        android:layout_below="@id/tt"
        android:background="@color/button_back"
        android:textColor="@android:color/white"
        android:onClick="onClickSign"/>

    <Button
        android:id="@+id/b7"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="7"
        android:textSize="30sp"
        android:layout_below="@id/b_del"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b8"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="8"
        android:textSize="30sp"
        android:layout_below="@id/b_sqrt"
        android:layout_toEndOf="@id/b7"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b9"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="9"
        android:textSize="30sp"
        android:layout_toEndOf="@id/b8"
        android:layout_below="@id/b_div"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b_min"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="-"
        android:textSize="30sp"
        android:layout_below="@id/b_mul"
        android:layout_toEndOf="@id/b9"
        android:background="@color/button_back"
        android:textColor="@android:color/white"
        android:onClick="onClickSign"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="4"
        android:textSize="30sp"
        android:layout_below="@id/b7"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="5"
        android:textSize="30sp"
        android:layout_below="@id/b8"
        android:layout_toEndOf="@id/b4"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b6"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="6"
        android:textSize="30sp"
        android:layout_toEndOf="@id/b5"
        android:layout_below="@id/b9"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b_plus"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="+"
        android:textSize="30sp"
        android:layout_below="@id/b_min"
        android:layout_toEndOf="@id/b6"
        android:background="@color/button_back"
        android:textColor="@android:color/white"
        android:onClick="onClickSign"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="1"
        android:textSize="30sp"
        android:layout_below="@id/b4"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="2"
        android:textSize="30sp"
        android:layout_below="@id/b5"
        android:layout_toEndOf="@id/b1"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="3"
        android:textSize="30sp"
        android:layout_toEndOf="@id/b2"
        android:layout_below="@id/b6"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b_equal"
        android:layout_width="102dp"
        android:layout_margin="1dp"
        android:layout_height="203dp"
        android:layout_below="@id/b_plus"
        android:layout_toEndOf="@id/b3"
        android:text="="
        android:textSize="30sp"
        android:background="#fcaf01"
        android:textColor="@android:color/white"
        android:onClick="onClickCalc"/>

    <Button
        android:id="@+id/b0"
        android:layout_width="207dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:layout_below="@id/b1"
        android:text="0"
        android:textSize="30sp"
        android:background="@color/numbers"
        android:textColor="@android:color/white"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/b_dot"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:text="."
        android:textSize="30sp"
        android:layout_below="@id/b3"
        android:layout_toEndOf="@id/b0"
        android:background="@color/numbers"
        android:textColor="@android:color/white"/>



</RelativeLayout>